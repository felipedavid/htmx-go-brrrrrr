{{define "title"}}Contacts{{end}}

{{define "main"}}
	<table>
		<thead>
			<tr>
				<th>First</th>
				<th>Last</th>
				<th>Phone</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			{{range .Contacts}}
				<tr>
					<td>{{.FirstName}}</td>
					<td>{{.LastName}}</td>
					<td>{{.Phone}}</td>
					<td>{{.Email}}</td>
					<td>
						<a href="/contacts/edit?id={{.ID}}">Edit</a>
						<a href="/contacts?id={{.ID}}">View</a>
					</td>
				</tr>
			{{end}}
	</table>
	<a href="/contacts/new">New Contact</a>
{{end}}
